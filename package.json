{
  "name": "whatsapp-automation",
  "version": "3.0.0",
  "description": "WhatsApp automation system with bulk sending, contact list management, and personalized messaging",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "send": "ts-node src/send-message.ts",
    "send:cli": "ts-node src/send-message-cli.ts",
    "bulk": "ts-node src/bulk-sender.ts",
    "manage-lists": "ts-node src/list-manager.ts",
    "advanced": "ts-node src/advanced-features.ts",
    "health": "ts-node src/health-check.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "bulk-sender",
    "messaging",
    "whatsapp-web",
    "typescript"
  ],
  "author": "Elad Jakobovits",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eladjak/whatsapp-automation.git"
  },
  "dependencies": {
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/qrcode-terminal": "^0.12.0",
    "rimraf": "^6.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
